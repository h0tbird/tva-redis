{
  "id": "/tva/redis",
  "instances": 1,
  "cpus": 0.1,
  "mem": 512,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "internal",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_redis"
  },
  "ipAddress": {
    "networkName": "devel",
    "labels": {
      "app": "redis",
      "group": "tva"
    },
    "discovery": {
      "ports": [
        { "number": 6379, "name": "redis", "protocol": "tcp" }
      ]
    }
  },
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "quay.io/kato/tva-redis:latest",
      "forcePullImage": true
    },
    "portMappings": [
      { "servicePort": 10012 }
    ]
  },
  "healthChecks": [
    {
      "protocol": "MESOS_TCP",
      "port": 6379,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
