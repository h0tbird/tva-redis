{
  "id": "redis",
  "instances": 1,
  "cpus": 0.5,
  "mem": 1024,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "internal",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_redis",
    "HAPROXY_DEPLOYMENT_ALT_PORT": "10011"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "softonic/tva-redis:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 6379, "hostPort": 0, "servicePort": 10010 }
      ],
      "privileged": false,
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
